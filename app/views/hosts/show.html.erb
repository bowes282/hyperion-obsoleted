<%- model_class = @host.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:ip_address) %>:</strong></dt>
  <dd><%= @host.ip_address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hostname) %>:</strong></dt>
  <dd><%= @host.hostname %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              hosts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_host_path(@host), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              host_path(@host),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>

<div class="page-header">
  <h2><%=t '.graphs' %></h2>
</div>

<div class="row">
  <% @host.graphs.each do |graph| %>
    <div class="span12">
      <h3><%= graph.name %></h3>
    </div>
    <% graph.rrds.sort_by {|r| r.name }.each do |rrd| %>
      <div class="span6">
        <%= image_tag @host.graph_path_for(graph.name, rrd.name) %><br />
        <%= rrd.name %>
      </div>
    <% end %>
  <% end %>
</div>
