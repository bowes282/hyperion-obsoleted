<script type="text/javascript">
  $().toastmessage('showToast', {
    text             : '<%= toast[:message] %>',
    sticky           : <%=  toast[:sticky]   || 'false' %>,
    position         : '<%= toast[:position] || 'top-right' %>',
    type             : '<%= toast[:type]     || 'success' %>',
    inEffectDuration : <%=  toast[:duration] || 600 %>,
    stayTime         : <%=  toast[:stayTime] || 3000 %>
});
</script>
