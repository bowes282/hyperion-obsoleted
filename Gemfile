source 'https://rubygems.org'

gem 'rails', '3.2.3'
gem 'jquery-rails'
gem 'twitter-bootstrap-rails', :git => 'https://github.com/seyhunak/twitter-bootstrap-rails.git'

group :development, :test do
  gem 'sqlite3'
  gem 'guard-rspec'
end

group :test do
  gem 'rspec-rails'
  gem 'capybara'
  gem 'rb-fsevent'
  gem 'growl'
  gem 'guard-spork'
  gem 'spork'
end

group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end
